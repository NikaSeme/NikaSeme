<Window x:Class="ClearVolumeWindows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ClearVolume" Height="720" Width="1280"
        WindowState="Maximized"
        Background="Black">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Border Grid.Row="0" Background="#1A1A1A" Padding="10">
            <Grid>
                <TextBlock Text="ClearVolume" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          Foreground="White"
                          VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right">
                    <Button Content="Settings" 
                           Click="SettingsButton_Click"
                           Style="{StaticResource ButtonStyle}"
                           Margin="5,0"/>
                    <Button Content="Exit" 
                           Click="ExitButton_Click"
                           Style="{StaticResource ButtonStyle}"
                           Margin="5,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Camera View -->
        <Grid Grid.Row="1" Background="Black">
            <Image x:Name="CameraPreview" 
                  Stretch="UniformToFill"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"/>
            
            <!-- Volume Display - Centered at bottom with medium font -->
            <Border x:Name="VolumeDisplay" 
                   Visibility="Collapsed"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Center"
                   Background="#B3000000"
                   CornerRadius="16"
                   Padding="24,16"
                   BorderBrush="#33FFFFFF"
                   BorderThickness="1"
                   Margin="0,0,0,80">
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                    <TextBlock x:Name="VolumeText" 
                              Text="0" 
                              FontSize="40" 
                              FontWeight="SemiBold"
                              Foreground="White"
                              VerticalAlignment="Center"/>
                    <TextBlock Text="ml" 
                              FontSize="32" 
                              FontWeight="Medium"
                              Foreground="#E6FFFFFF"
                              Margin="6,0,0,0"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#1A1A1A" Padding="10,5">
            <Grid>
                <TextBlock x:Name="StatusText" 
                          Text="Initializing camera..." 
                          Foreground="#B0FFFFFF"
                          FontSize="12"
                          VerticalAlignment="Center"/>
                <TextBlock x:Name="FpsText" 
                          Text="FPS: 0" 
                          Foreground="#B0FFFFFF"
                          FontSize="12"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>

